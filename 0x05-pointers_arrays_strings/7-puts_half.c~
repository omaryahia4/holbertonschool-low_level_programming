#include "holberton.h"
/**
* puts_half - puts the half of string
*@s:string
* Return: length
*/
void puts_half(char *str)
{
	int i, j;

	i = 0;
	while (s[i] != '\0')
	{
		i++;
	}
		if (i % 2 == 0)
		{
			j = i;
			i = (i / 2);
				while (i < j)
				{
					_putchar(s[i]);
					i++;
				}
		}
		else
		{
			j = i;
			i = i / 2 + 1;
				while (i < j)
				{
					_putchar(s[i]);
					i++;
				}
		}
	_putchar('\n');
}
